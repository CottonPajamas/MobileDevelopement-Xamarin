             x:Class="TestXamarin.SecondPage"
             BackgroundColor="Black"
             Title="SecondPage">
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
            iOS="0, 20, 0, 0"
            Android="0, 0, 0, 0">
